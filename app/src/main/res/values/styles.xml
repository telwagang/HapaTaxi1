<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Button.HapaTaxiRegular" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">#262626</item>
        <item name="android:background">@color/colorPrimary</item>
        <!--<item name="android:background">@drawable/ripple</item> -->
    </style>

    <style name="AppTheme.Button.Facebook" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">#45619D</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#45619D</item>
    </style>

    <style name="AppTheme.Button.GooglePlus" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">#dd4b39</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#dd4b39</item>
    </style>

    <style name="AppTheme.Textview.HapaTaxiRegular" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>


    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
